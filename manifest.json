{
  "manifest_version": 3,
  "name": "Screen Chopper",
  "version": "0.1.1",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "debugger"
  ],
  "description": "Create Instagram carousel images from webpages.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  }
}
