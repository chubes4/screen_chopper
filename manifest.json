{
  "manifest_version": 3,
  "name": "Screen Chopper",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "debugger"
  ],
  "host_permissions": ["<all_urls>"],
  "description": "Create Instagram carousel images from webpages.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
"content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["jszip.min.js", "content.js"]
  }
],
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  }
}
